<% if programmer.errors.any? %>
    <div id='error_explanation'>
        <h2>
            <%= pluralize(programmer.errors.count, 'error') %>
            prohibited this programmer from being saved:
        </h2>

        <ul>
            <% programmer.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_for programmer do |f| %>
    <div class="field<%= ' field_with_errors' if programmer.errors[:username].any? %>">
        <%= f.label :username %>
        <%= f.text_field :username, :placeholder => 'Enter Username' %>
    </div><br />

    <div class="field<%= ' field_with_errors' if programmer.errors[:password].any? %>">
        <%= f.label :password %>:
        <%= f.password_field :password, :placeholder => 'Enter Password' %>
    </div><br />

    <div class="field<%= ' field_with_errors' if programmer.errors[:password_confirmation].any? %>">
        <%= f.label :password_confirmation %>:
        <%= f.password_field :password_confirmation, :placeholder => 'Confirm Password' %>
    </div><br />

    <div class="field<%= ' field_with_errors' if programmer.errors[:first_name].any? %>">
        <%= f.label :first_name %>:
        <%= f.text_field :first_name, :placeholder => 'Enter First Name' %><
    </div><br />

    <div class="field<%= ' field_with_errors' if programmer.errors[:last_name].any? %>">
        <%= f.label :last_name %>:
        <%= f.text_field :last_name, :placeholder => 'Enter Last Name' %>
    </div><br />

    <div class="field<%= ' field_with_errors' if programmer.errors[:email].any? %>">
        <%= f.label :email %>:
        <%= f.text_field :email, :placeholder => 'Enter Email' %>
    </div><br />

    <div class="field<%= ' field_with_errors' if programmer.errors[:phone_number].any? %>">
        <%= f.label :phone_number %>:
        <%= f.text_field :phone_number, :placeholder => 'Enter Phone Number' %>
    </div><br />

        <%= f.submit class: 'button is-primary' %>
<% end %>