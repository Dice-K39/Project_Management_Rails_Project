<%= form_for assignment do |f| %>
    <%= f.label :project %>
    <%= f.collection_select :project_id, Project.all, :id, :name %><br />

    <%= f.label :is_completed %>
    <%= f.check_box :is_completed %><br />

    <%= f.label :task %>
    <%= f.text_area :task, placeholder: 'Enter Task' %><br />

    <%= f.label :assigned_at %>
    <%= f.datetime_field :assigned_at, placeholder: 'Enter Date and Time' %><br />

    <%= f.label 'Programmer Assigned' %>
    <%= f.collection_select :programmer_id, Programmer.all, :id, :full_name %><br />

    <%= f.submit class: 'button is-primary'%>
<% end %>