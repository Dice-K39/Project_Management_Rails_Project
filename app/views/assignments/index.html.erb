<% @assignments.each do |assignment| %>
    <label>Task: </label>
    <%= assignment.task %><br />

    <label>Assigned At: </label>
    <%= assignment.assigned_at %><br />

    <label>Completed?: </label>
    <% if assignment.is_completed == true %>
        YES
    <% else %>
        NO
    <% end %><br />

    <label>Programmer Assigned:</label>
    <% if assignment.programmer != nil %>
        <%= assignment.programmer.full_name %>
    <% else %>
        Not Assigned
    <% end %><br />

    <label>For: </label>
    <%= assignment.project.name %><br /><br />
<% end %>