<%= form_for project do |f| %>
    <%= f.label :name %>:
    <%= f.text_field :name, :placeholder => 'Enter Project Name' %><br />

    <%= f.label :description %>:
    <%= f.text_area :description, :placeholder => 'Enter Project Description' %><br />
    
    <%= f.label :due_date %>:
    <%= f.datetime_field :due_date, :placeholder => 'Enter Due Date' %><br />

    <%= f.label :status %>:
    <%= f.select(:status, Project.statuses.keys.map {|status| [status.titleize,status]}) %><br />

    <%= f.submit class: 'button is-primary'%>
<% end %>