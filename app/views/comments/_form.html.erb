<% if comment.errors.any? %>
    <div class='content' id='error_explanation'>
        <h2>
            <%= pluralize(comment.errors.count, 'error') %>
            prohibited this comment from being saved:
        </h2>

        <ul>
            <% comment.errors.full_messages.each do |msg| %>
                <strong><li><%= msg %></li></strong>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_for [assignment, comment] do |f| %>
    <table>
        <tr>
            <th><%= f.label 'Project: ' %></th>
            <td><%= comment.assignment.project.name %></td>
        </tr>

        <tr>
            <th><%= f.label 'Assignment: '%></th>
            <td><%= comment.assignment.task %></td>
        </tr>

        <tr>
            <th><%= f.label :title %>:</th>
            <td><%= f.text_field :title, placeholder: 'Enter Title' %></td>
        </tr>

        <tr>
            <th><%= f.label :content %>:</th>
            <td><%= f.text_area :content, placeholder: 'Enter Content' %></td>
        </tr>
    </table>
    <br />

    <%= f.submit class: 'button is-primary'%>
<% end %>